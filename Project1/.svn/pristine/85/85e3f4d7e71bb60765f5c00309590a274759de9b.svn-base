<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header">
<link href="/css/layui.css" rel="stylesheet">
</head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
								<div class="tab-pane fade">
									<div class="ibox">
										<div class="ibox-body">
											<div class="fixed-table-toolbar">
												<div class="columns pull-left">
													<button shiro:hasPermission="payment:contractApproval:add"
														type="button" class="btn  btn-primary"
														onclick="add()">
														<i class="fa fa-plus" aria-hidden="true"></i>添加
													</button>
													<button shiro:hasPermission="payment:contractApproval:batchRemove"
														type="button" class="btn  btn-danger"
														onclick="batchRemove()">
														<i class="fa fa-trash" aria-hidden="true"></i>批量删除
													</button>
												</div>
											</div>
											<table id="payableTable" data-mobile-responsive="true">
											</table>
										</div>
										<!--shiro控制bootstraptable行内按钮看见性 来自bootdo的创新方案 -->
										<div>
											<script type="text/javascript">
												var s_edit_h = 'hidden';
												var s_remove_h = 'hidden';
												var s_resetPwd_h = 'hidden';
											</script>
										</div>
										<div shiro:hasPermission="payment:contractApproval:edit">
											<script type="text/javascript">
												s_edit_h = '';
											</script>
										</div>
										<div shiro:hasPermission="payment:contractApproval:remove">
											<script type="text/javascript">
												var s_remove_h = '';
											</script>
										</div>
										<div shiro:hasPermission="payment:contractApproval:resetPwd">
											<script type="text/javascript">
												var s_resetPwd_h = '';
											</script>
										</div>
									</div>
								</div>
						</form>
					</div>
			</div>
		</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script src="/js/layui.js"></script>
	<script src="/js/vue.min.js"></script>
	<script src="/js/plugins/layer/layer.min.js"></script>
	<script type="text/javascript" src="/js/appjs/payment/contractApproval/add.js"></script>
</body>
</html>
