<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							<input id="customerId" name="customerId" type="hidden">
							<div class="form-group">
								<label class="col-sm-2 control-label"><span
									class="mustin">*&nbsp;</span>部门名称：</label>
								<div class="col-sm-4">
									<input id="customerDeptName" name="customerDeptName"
										class="form-control" type="text">
								</div>
								<label class="col-sm-2 control-label"><span
									class="mustin">*&nbsp;</span>部门描述：</label>
								<div class="col-sm-4">
									<input id="customerDeptDescription"
										name="customerDeptDescription" class="form-control"
										type="text">
								</div>
							</div>
							<div class="form-group">
<!-- 								<label class="col-sm-2 control-label"><span -->
<!-- 									class="mustin">*&nbsp;</span>上级部门：</label> -->
<!-- 								<div class="col-sm-4"> -->
<!-- 									<input id="customerDeptParentDept" -->
<!-- 										name="customerDeptParentDept" class="form-control" type="text"> -->
<!-- 								</div> -->
								<label class="col-sm-2 control-label"><span
									class="mustin">*&nbsp;</span>子公司编号：</label>
								<div class="col-sm-4">
									<select data-placeholder="请选择" name="childCompanyId"
										id="childCompanyId" class="form-control chosen-select"
										tabindex="2" style="width: 100%">
										<option value="">请选择</option>
									</select>

								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">备注：</label>
								<div class="col-sm-8">

									<input id="customerDeptRemarks" name="customerDeptRemarks"
										class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
									<button type="button" class="btn btn-danger"
										onclick="closeWin()">取消</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript"
		src="/js/appjs/sales/companyCustomer/addDept.js">
		
	</script>
</body>
</html>
