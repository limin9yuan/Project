<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							<div class="form-group">
								<label class="col-sm-3 control-label">假日名称:</label>
								<div class="col-sm-8">
									<input id="holidayName" name="holidayName" class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">起始日：</label>
								<div class="col-sm-8">
									<div class="col-sm-1 input-group date" id="startDay">
										<input class="form-control" type="text"
					                        name="startDay" style="width:100px"> <span
					                        class="input-group-addon"> <span
					                        class="glyphicon glyphicon-calendar"></span>
					                    </span>
					                    </input>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">结束日：</label>
								<div class="col-sm-8">
									<div class="col-sm-1 input-group date" id="endDay">
										<input class="form-control" type="text"
					                        name="endDay" style="width:100px"> <span
					                        class="input-group-addon"> <span
					                        class="glyphicon glyphicon-calendar"></span>
					                    </span>
					                    </input>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">上班时间：</label>
								<div class="col-sm-8">
									<div class="col-sm-1 input-group date" id="startWork">
										<input class="form-control" type="text"
					                        name="startWork" style="width:100px"> <span
					                        class="input-group-addon"> <span
					                        class="glyphicon glyphicon-calendar"></span>
					                    </span>
					                    </input>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">下班时间：</label>
								<div class="col-sm-8">
									<div class="col-sm-1 input-group date" id="endWork">
										<input class="form-control" type="text"
					                        name="endWork" style="width:100px"> <span
					                        class="input-group-addon"> <span
					                        class="glyphicon glyphicon-calendar"></span>
					                    </span>
					                    </input>
									</div>
								</div>
							</div>
																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/workDay/add.js">
	</script>
</body>
</html>
