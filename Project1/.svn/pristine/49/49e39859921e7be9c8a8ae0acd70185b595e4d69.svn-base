	<!-- 	//		删除附件文件的同时删除表里面附件字段下的附件i -->
	<update id="updateRecordServiceAttachment" parameterType="com.bootdo.sales.domain.RecordServiceDO">
		UPDATE sales_record_service
 		SET Service_Attachment =REPLACE(Service_Attachment,#{id},'')
	</update>
	<delete id="remove">
		delete from sales_record_service where Service_ID = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sales_record_service where Service_ID in 
		<foreach item="serviceId" collection="array" open="(" separator="," close=")">
			#{serviceId}
		</foreach>
	</delete>
	
