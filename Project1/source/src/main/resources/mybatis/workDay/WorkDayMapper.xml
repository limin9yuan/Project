<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.workDay.dao.WorkDayDao">

	<select id="get" resultType="com.bootdo.workDay.domain.WorkDayDO">
		select `id`,`work_day` from work_day where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.workDay.domain.WorkDayDO">
		select `id`,`work_day` from work_day
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="workDay != null and workDay != ''"> and work_day = #{workDay} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from work_day
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="workDay != null and workDay != ''"> and work_day = #{workDay} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.workDay.domain.WorkDayDO" useGeneratedKeys="true" keyProperty="id">
		insert into work_day
		(
			`work_day`
		)
		values
		(
			#{workDay}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.workDay.domain.WorkDayDO">
		update work_day 
		<set>
			<if test="workDay != null">`work_day` = #{workDay}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from work_day where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from work_day where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>