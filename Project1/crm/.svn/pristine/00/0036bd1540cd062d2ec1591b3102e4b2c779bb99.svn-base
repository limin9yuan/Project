$.validator.setDefaults({
	submitHandler : function() {
		save();
	}
});
function save() {
	$.ajax({
		cache : true,
		type : "POST",
		url : "/sales/record/save",
		data : $('#signupForm').serialize(),// 你的formid
		async : false,
		error : function(request) {
			parent.layer.alert("Connection error");
		},
		success : function(data) {
			if (data.code == 0) {
				parent.layer.msg("操作成功");
				parent.reLoad();
				var index = parent.layer.getFrameIndex(window.name); // 获取窗口索引
				parent.layer.close(index);

			} else {
				parent.layer.alert(data.msg)
			}

		}
	});

}
function validateRule() {
	var icon = "<i class='fa fa-times-circle'></i> ";
	$("#signupForm").validate({
		rules : {
			recordName : {
				required : true,
				maxlength:50
			},
			recordBeginDate: {
				required : true,
				dateISO:true
			},recordEndDate: {
				required : true
			},recordSaleOpportunity: {
				required : true,
				maxlength:200
			}
		},
		messages : {
			recordName : {
				required : icon + "请输入行动主题！",
				maxlength:icon + "字符长度不能大于50"
			},
			recordBeginDate : {
				required : icon + "实际执行开始时间不能为空！",
				dateISO: icon + "请输入有效的日期 (YYYY-MM-DD)"
			},recordEndDate : {
				required : icon + "实际执行开始时间不能为空！"
			},recordSaleOpportunity : {
				required : icon + "请输入销售机会！",
				maxlength:icon + "字符长度不能大于200"
			}
		}
	})
}
function datetimepicker() {
	 $('#recordBeginDate').datetimepicker({  
	        format: 'YYYY-MM-DD',  
	        locale: moment.locale('zh-cn')  
	    });  
	 $('#recordEndDate').datetimepicker({  
	        format: 'YYYY-MM-DD',  
	        locale: moment.locale('zh-cn')  
	    }); 
}
